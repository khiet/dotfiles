{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-opus-4-5",
  "plugin": ["@mohak34/opencode-notifier@latest"],
  "mode": {
    "build": {
      "prompt": "{file:prompts/build.txt}",
    },
    "plan": {
      "prompt": "{file:prompts/plan.txt}",
    },
  },
  "permission": {
    "bash": {
      "*": "ask",
      /* Read-only */
      /* File/directory inspection */
      "ls*": "allow",
      "cat*": "allow",
      "head*": "allow",
      "tail*": "allow",
      "wc*": "allow",
      "find*": "allow",
      "file*": "allow",
      "stat*": "allow",
      "du*": "allow",
      "df*": "allow",
      "tree*": "allow",
      /* Text search */
      "grep*": "allow",
      "rg*": "allow",
      "ag*": "allow",
      /* System info */
      "which*": "allow",
      "whereis*": "allow",
      "type*": "allow",
      "echo*": "allow",
      "pwd": "allow",
      "date": "allow",
      "uname*": "allow",
      "whoami": "allow",
      "hostname": "allow",
      "env": "allow",
      "printenv*": "allow",
      /* Tools */
      "mise*": "allow",
      "node*": "allow",
      "open*": "allow",
      /* Git */
      "git show*": "allow",
      "git log*": "allow",
      "git branch*": "allow",
      "git diff*": "allow",
      "git status*": "allow",
      "git remote*": "allow",
      "git rev-parse*": "allow",
      "git ls-files*": "allow",
      "git describe*": "allow",
      "git tag*": "allow",
      /* GitHub CLI */
      "gh issue view*": "allow",
      "gh issue list*": "allow",
      "gh pr view*": "allow",
      "gh pr diff*": "allow",
      "gh pr list*": "allow",
      "gh pr checks*": "allow",
      "gh repo view*": "allow",
      /* Write */
      "git stash*": "allow",
      "git checkout*": "allow",
      "git pull*": "allow",
      "git add*": "allow",
      "git commit*": "allow",
      "git push*": "allow",
      "gh pr create*": "allow",
      "gh pr edit*": "allow",
      /* Delete */
      "rm /tmp/*": "allow",
    },
    "webfetch": "allow",
  },
  "mcp": {
    "linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/sse",
    },
    "aws-api": {
      "type": "local",
      "command": ["uvx", "awslabs.aws-api-mcp-server@latest"],
      "environment": {
        "AWS_REGION": "eu-west-2",
        "AWS_API_MCP_PROFILE_NAME": "pave",
        "READ_OPERATIONS_ONLY": "true",
      },
    },
    "aws-knowledge": {
      "type": "local",
      "command": [
        "uvx",
        "fastmcp",
        "run",
        "https://knowledge-mcp.global.api.aws",
      ],
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}",
      },
    },
    "sentry": {
      "type": "remote",
      "url": "https://mcp.sentry.dev/mcp",
    },
    "figma": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp",
    },
  },
}
