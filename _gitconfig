[core]
	editor = $EDITOR
	ignorecase = false
[color]
	ui = true
[alias]
	st  = status
	co  = checkout
	br  = branch
	ps  = push
	pl  = pull
	aa  = add -A
  ci  = commit -av
  ft  = fetch
  d   = diff
  dw  = diff --word-diff
  dn  = diff --name-only
  ds  = diff --staged
  dsn  = diff --staged --name-only
  dsw = diff --staged --word-diff
  lg  = log --pretty=format:'%C(yellow)%h%Creset %s %Cgreen(%cd) %C(red)%an%Creset'
  lgg = log --graph --decorate --oneline
  dom = diff origin/master
  rmc = rm -r --cached .
  rma = !git reset --hard HEAD && git clean -fd
  su = !git branch --set-upstream-to=origin/$(git symbolic-ref --short HEAD)
  ri = rebase -i
[filter "lfs"]
	smudge = git-lfs smudge %f
	required = true
	clean = git-lfs clean %f
[user]
	name = Khiet Le
	email = khiet.le@ehochef.com
[pull]
	default = current
[push]
  default = current
[fetch]
  prune = true
