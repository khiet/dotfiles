[core]
  editor = $EDITOR
  ignorecase = false
  excludesfile = ~/dotfiles/_global_gitignore
  pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
  st  = status --short
  co  = checkout
  br  = branch --sort=-committerdate
  ps  = push
  psd = !git push origin --delete $(git symbolic-ref --short HEAD)
  pl  = pull
  s   = !git --no-pager show
  a  = add -p
  aa  = add -A
  c  = commit -v
  ca = commit -v --amend
  aac  = !git add -A && git commit -v
  aaca  = !git add -A && git commit -v --amend
  cp  = cherry-pick
  cpc  = cherry-pick --continue
  ft  = fetch
  d   = diff
  dw  = diff --word-diff
  dn  = diff --name-only
  ds  = diff --staged
  dsw = diff --staged --word-diff
  dsn  = diff --staged --name-only
  dhh = diff HEAD~
  do = !git diff origin/$(git symbolic-ref --short HEAD)
  dom = !git diff $(git branch -r | rg '^\\s+origin/(master|main)$')
  lp  = log --patch --follow
  lg  = log --pretty=format:'%C(yellow)%h%Creset %s %C(green)%cd %C(red)%aN%Creset' --date=format:'%a %d %b %Y %H:%M:%S'
  lgg = log --graph --decorate --oneline
  stsl = stash list --pretty=format:'%C(yellow)%h%Creset %C(green)%cd %C(white)%s%Creset' --date=format:'%a %d %b %Y %H:%M:%S'
  rmc = rm -r --cached .
  rma = !git reset --hard HEAD && git clean -fd
  su = !git branch --set-upstream-to=origin/$(git symbolic-ref --short HEAD)
  r = rebase
  ri = rebase -i
  rc = rebase --continue
  rim = !git rebase -i $(git branch | rg '^\\s+(master|main)$')
  com = !git checkout $(git branch -r | rg '^\\s+(master|main)$')
  riom = !git rebase -i $(git branch -r | rg '^\\s+origin/(master|main)$')
  coom = !git checkout $(git branch -r | rg '^\\s+origin/(master|main)$')
  o = !sh ~/dotfiles/scripts/git_open_in_github.sh
[filter "lfs"]
  smudge = git-lfs smudge %f
  required = true
  clean = git-lfs clean %f
[user]
  name = Khiet Le
  email = khiet@outlook.com
[pull]
  default = current
  ff = only
[push]
  default = current
[fetch]
  prune = true
[interactive]
  diffFilter = diff-so-fancy --patch
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
