{
  "highlight.document.enable": false,
  // https://github.com/weirongxu/coc-explorer#configuration
  "explorer.width": 40,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.file.showHiddenFiles": true,
  "explorer.keyMappings": {
    "v": "open:vsplit"
  },
  // https://github.com/neoclide/coc-snippets/blob/master/package.json
  "snippets.userSnippetsDirectory": "~/.vim/custom_snippets",
  "snippets.extends": {
    "haml": [
      "javascript"
    ]
  },
  // https://github.com/neoclide/coc-emmet/blob/master/package.json
  "emmet.includeLanguages": {
    "eruby": "html"
  },
  // https://github.com/neoclide/coc-solargraph/blob/master/package.json
  "solargraph.formatting": true,
  "solargraph.diagnostics": true,
  // https://github.com/neoclide/coc-tsserver#configuration-options
  "eslint.autoFixOnSave": true
}
